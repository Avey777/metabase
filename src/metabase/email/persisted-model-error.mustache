{{> metabase/email/_header }}
  <div style="padding: 2em 4em; border: 1px solid #dddddd; border-radius: 2px; background-color: white; box-shadow: 0 1px 2px rgba(0, 0, 0, .08); text-align: center;">
    <p>
      <h2 style="margin: 0; padding: 0; padding-bottom: .4em; font-weight: normal; color: #4C545B;">Model refresh for {{database-name}} failed</h2>
    </p>
    <p>
      {{#errors}}
      <div style="padding-bottom: 1em;">
      <p>We ran into some trouble refreshing the model {{card-name}}. You can see the error description below:</p>
      <code>{{error}}</code>
      <table>
        <tr>
          <td>Model name</td>
          <td><a href="{{card-url}}">{{card-name}}</a></td>
        </tr>
        <tr>
          <td>Collection</td>
          <td><a href="{{collection-url}}">{{collection-name}}</a></td>
        </tr>
        <tr>
          <td>Last run at</td>
          <td>{{last-run-at}}</td>
        </tr>
        <tr>
          <td>Last run trigger</td>
          <td>{{last-run-trigger}}</td>
        </tr>
      </table>
      <a href="{{caching-log-details-url}}"><button>Review in Tools page</button></a>
      </div>
      {{/errors}}
    </p>
  </div>
{{> metabase/email/_footer }}
